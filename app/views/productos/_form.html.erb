<%= form_with(model: producto, local: true) do |form| %>
    <% if producto.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(producto.errors.count, "error") %> impidieron guardar el producto:</h2>
        <ul>
          <% producto.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= form.label :nombre %><br>
      <%= form.text_field :nombre %>
    </div>
  
    <div>
      <%= form.label :precio %><br>
      <%= form.number_field :precio, step: 0.01 %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  
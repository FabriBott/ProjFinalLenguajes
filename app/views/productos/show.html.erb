<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <h3 class="card-title mb-0">
            <i class="fas fa-box me-2"></i>
            Detalle del Producto
          </h3>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <div class="display-6 mb-3">
              <i class="fas fa-cube text-primary"></i>
            </div>
            <h2 class="card-title"><%= @producto.nombre %></h2>
          </div>
          
          <div class="row text-center">
            <div class="col-md-6">
              <div class="card border-success mb-3">
                <div class="card-body">
                  <h5 class="card-title text-success">
                    <i class="fas fa-dollar-sign"></i> Precio
                  </h5>
                  <h3 class="text-success">â‚¡<%= number_with_delimiter(@producto.precio, delimiter: ',') %></h3>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-<%= @producto.sin_stock? ? 'danger' : 'warning' %> mb-3">
                <div class="card-body">
                  <h5 class="card-title text-<%= @producto.sin_stock? ? 'danger' : 'warning' %>">
                    <i class="fas fa-warehouse"></i> Stock
                  </h5>
                  <h3 class="text-<%= @producto.sin_stock? ? 'danger' : 'warning' %>">
                    <%= @producto.stock || 0 %> unidades
                    <% if @producto.sin_stock? %>
                      <br><small class="text-danger">(Sin stock)</small>
                    <% end %>
                  </h3>
                </div>
              </div>
            </div>
          </div>
          
          <div class="d-flex gap-3 justify-content-center mt-4">
            <%= link_to edit_producto_path(@producto), class: "btn btn-warning btn-lg" do %>
              <i class="fas fa-edit me-2"></i>
              Editar Producto
            <% end %>
            <%= link_to productos_path, class: "btn btn-outline-secondary btn-lg" do %>
              <i class="fas fa-arrow-left me-2"></i>
              Volver a Lista
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

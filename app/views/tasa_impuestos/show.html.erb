<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h1 class="card-title mb-0"><%= @tasa_impuesto.nombre %></h1>
          <div>
            <%= link_to 'Editar', edit_tasa_impuesto_path(@tasa_impuesto), class: 'btn btn-warning' %>
            <%= link_to 'Volver', tasa_impuestos_path, class: 'btn btn-secondary' %>
          </div>
        </div>
        
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>Nombre:</strong> <%= @tasa_impuesto.nombre %></p>
              <p><strong>Porcentaje:</strong> <%= @tasa_impuesto.porcentaje %>%</p>
            </div>
            <div class="col-md-6">
              <p><strong>Estado:</strong> 
                <% if @tasa_impuesto.activo? %>
                  <span class="badge bg-success">Activo</span>
                <% else %>
                  <span class="badge bg-secondary">Inactivo</span>
                <% end %>
              </p>
              <p><strong>Predeterminado:</strong> 
                <% if @tasa_impuesto.predeterminado? %>
                  <span class="badge bg-primary">Sí</span>
                <% else %>
                  <span class="badge bg-light text-dark">No</span>
                <% end %>
              </p>
            </div>
          </div>
          
          <% if @tasa_impuesto.descripcion.present? %>
            <div class="mt-3">
              <strong>Descripción:</strong>
              <p><%= @tasa_impuesto.descripcion %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
